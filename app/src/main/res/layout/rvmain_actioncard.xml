<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:cardview="http://schemas.android.com/apk/res-auto"
	android:id="@+id/rvMain_cardView"
	android:layout_width="match_parent"
	android:layout_margin="@dimen/activity_margin"
	android:layout_height="wrap_content"
	cardview:cardCornerRadius="8dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:paddingTop="@dimen/activity_padding_less"
			android:paddingStart="@dimen/activity_padding_less"
			android:paddingEnd="@dimen/activity_padding_less"
			android:text="Upcoming Item"
			android:id="@+id/rvMain_cardView_title"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingBottom="@dimen/activity_padding_less"
			android:paddingStart="@dimen/activity_padding_less"
			android:paddingEnd="@dimen/activity_padding_less"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="Oops - we were supposed to display something here but it looks like we made a mistake!"
			android:id="@+id/rvMain_cardView_subtitle"
			android:layout_gravity="start"/>

		<LinearLayout
			android:id="@+id/rvMain_cardView_detailLayout1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/rvMain_cardView_dueDate"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textStyle="italic"
				android:text="Due: Nov. 1, 12:00 AM"/>

			<View
				android:layout_width="1dp"
				android:layout_height="match_parent"
				android:background="@android:color/darker_gray"/>


			<TextView
				android:id="@+id/rvMain_cardView_priority"
				android:layout_weight="1"
				android:gravity="center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textStyle="italic"
				android:text="Normal Priority"/>

		</LinearLayout>

		<TextView
			android:id="@+id/rvMain_cardView_itemHint"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearance"
			android:textStyle="bold"
			android:padding="@dimen/activity_padding_less"
			android:layout_marginRight="@dimen/activity_margin_less"
			android:layout_marginLeft="@dimen/activity_margin_less"
			android:gravity="center"
			android:text="You need to ace this item to stay on budget."/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:paddingStart="@dimen/activity_padding"
			android:text="SCORE"
			android:id="@+id/rvMain_cardView_entryLabel"/>

		<LinearLayout
			android:id="@+id/rvMain_cardView_entryLayout1"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="@dimen/activity_padding_less"
			android:paddingRight="@dimen/activity_padding_less"
			android:paddingBottom="@dimen/activity_padding_less">

			<SeekBar
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:id="@+id/rvMain_cardView_entrySeekBar"
				android:layout_weight="3"
				android:layout_gravity="center_vertical"
				android:max="100"
				android:progress="100"/>

			<EditText
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:inputType="numberDecimal"
				android:ems="5"
				android:gravity="center"
				android:id="@+id/rvMain_cardView_entryEditText"
				android:layout_weight="1"
				android:hint="100"/>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/rvMain_cardView_buttonBar"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="?android:attr/selectableItemBackground"
				android:text="ENTER"
				android:id="@+id/rvMain_cardView_buttonBar_Enter"
				android:layout_gravity="center_horizontal"
				android:layout_weight="1"/>

			<View
				android:layout_width="1dp"
				android:layout_height="match_parent"
				android:layout_marginTop="@dimen/activity_margin_less"
				android:layout_marginBottom="@dimen/activity_margin_less"
				android:background="@android:color/darker_gray"/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="?android:attr/selectableItemBackground"
				android:text="MULLIGAN"
				android:id="@+id/rvMain_cardView_buttonBar_Mulligan"
				android:layout_gravity="center_horizontal"
				android:layout_weight="1"/>

		</LinearLayout>

	</LinearLayout>

</android.support.v7.widget.CardView>