<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical"
			  tools:context="ca.yuey.thebudget.application.fragment.CourseContentChildFragment">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:elevation="@dimen/activity_elevation"
		android:orientation="horizontal"
		android:padding="@dimen/activity_padding_less">

		<TextView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center_vertical"
			android:text="Jump to:"/>

		<Spinner
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="2"
			android:id="@+id/fragment_courseContent_spinner"/>

	</LinearLayout>

	<ListView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:clipToPadding="false"
		android:divider="@null"
		android:dividerHeight="@dimen/activity_padding"
		android:id="@+id/fragment_courseContent_listView"
		android:padding="@dimen/activity_padding_less"
		tools:listitem="@layout/listitem_coursecontent"/>

</LinearLayout>
