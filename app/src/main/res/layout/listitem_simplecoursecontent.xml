<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="@dimen/activity_padding_less">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:id="@+id/listitem_simpleCourseContent_title"
		android:text="Title"
		android:textAppearance="?android:attr/textAppearanceLarge"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignStart="@+id/listitem_simpleCourseContent_title"
		android:layout_below="@+id/listitem_simpleCourseContent_title"
		android:id="@+id/listitem_simpleCourseContent_dueDateTime"
		android:text="Due Thrs Jan 1"
		android:textAppearance="?android:attr/textAppearanceMedium"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignEnd="@+id/listitem_simpleCourseContent_title"
		android:layout_alignTop="@+id/listitem_simpleCourseContent_dueDateTime"
		android:id="@+id/listitem_simpleCourseContent_fromNowDateTime"
		android:text="5 days"
		android:textAppearance="?android:attr/textAppearanceMedium"/>

</RelativeLayout>